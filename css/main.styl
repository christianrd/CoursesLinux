@require "stylus/mixin.styl"
@import "stylus/fonts.css"

//VARIABLES
$primary-color = #1f1f1f
$second-color = #8f8f8f
$background-body = #f2f2f2
//-------------------------------------------

*
  font-family: 'Roboto', sans-serif

body
html
  //font-family: 'Roboto', sans-serif;
  font-size 16px;

/* *** LOGIN SECTION ***
*  ********************
*/
.container-img
  background url("../images/Student-background.jpg") center no-repeat fixed
  background-size cover

.login
  margin-top:  10%
  text-align center
  font: 1em 'Roboto Thin', Helvetica, Arial, sans-serif
  color #fff

.inp
  margin-top: 10px
  margin-bottom 15px

.panel
  border: none
  border-radius(12px)

.panel-heading > a
  position: relative
  display: block
  padding: 5px 0

.panel-heading > a:after
  position: absolute
  bottom: -19px
  left: 50%
  content: ""
  width: 0
  height: 0
  //border-radius 50%
  border-left: 8px solid transparent
  border-right: 8px solid transparent
  border-top: 8px solid $primary-color
  //border-bottom 8px solid $primary-color
  -webkit-transform: translate(-50%,-20%)
  -moz-transform: translate(-50%,-20%)
  -ms-transform: translate(-50%,-20%)
  -o-transform: translate(-50%,-20%)
  transform: translate(-50%,-20%)

.panel-default > .panel-heading-color
  background-color $primary-color
  border-top-left-radius  10px
  -webkit-border-top-left-radius  10px
  border-top-right-radius  10px
  -webkit-border-top-right-radius  10px

.panel-default > .panel-body
  background-color #dbdbdb
  -webkit-border-bottom-left-radius 10px
  border-bottom-left-radius 10px
  -webkit-border-bottom-right-radius 10px
  border-bottom-right-radius 10px

.img-login
  width 140px

.btn
  margin-top 20px
  margin-bottom 10px
  border-top none
  border-left none
  border-right none
  border-radius(3px)
  transition(1s)

.btn-lg, .normal-text
  font-family 'Roboto', sans-serif
  font-weight 300

.btn-primary
  border-bottom  5px solid #204d74

// changing the color focus for all input
textarea:focus
input[type="text"]:focus
input[type="password"]:focus
input[type="datetime"]:focus
input[type="datetime-local"]:focus
input[type="date"]:focus
input[type="month"]:focus
input[type="time"]:focus
input[type="week"]:focus
input[type="number"]:focus
input[type="email"]:focus
input[type="url"]:focus
input[type="search"]:focus
input[type="tel"]:focus
input[type="color"]:focus
.uneditable-input:focus
  border-color rgba(31, 31, 31 0.6)
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 4px rgba(31, 31, 31 0.2)
  outline 0 none

.credits > .fa-heart
.credits > .fa-code
  color: $second-color

.credits > a
  text-decoration none
  transition(1s)

/**   *Cursos*   **/
